<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:id="@+id/cardview_ciudad">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_avance"
                android:layout_width="match_parent"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:layout_height="50dp" />

            <TextView
                android:id="@+id/txt_justificacion"
                style="@style/font_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:lines="2" />

            <RelativeLayout
                android:id="@+id/container_social"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.facebook.share.widget.ShareButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:padding="15dp"
                    android:id="@+id/share_facebook"/>

                <!--<com.twitter.sdk.android.tweetcomposer.ComposerView-->
                    <!--android:layout_width="30dp"-->
                    <!--android:layout_height="30dp"-->
                    <!--android:layout_margin="10dp"-->
                    <!--android:layout_toRightOf="@+id/share_facebook"-->
                    <!--android:layout_toEndOf="@+id/share_facebook"-->
                    <!--android:padding="15dp"-->
                    <!--android:id="@+id/share_twitter"/>-->

            </RelativeLayout>

        </LinearLayout>

</android.support.v7.widget.CardView>